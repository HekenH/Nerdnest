@page
@model Nerdnest.Pages.Login.RegistrationModel


<div class="container-fluid d-flex justify-content-center loginbackground">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div style="margin-bottom: -170px;padding-left: 25%;text-decoration: underline;text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);">
            <span asp-validation-for="@Model.NewAccount.Name" class="text-danger"></span><br />
            <span asp-validation-for="@Model.NewAccount.LastName" class="text-danger"></span><br />
            <span asp-validation-for="@Model.NewAccount.Email" class="text-danger"></span><br />
            <span asp-validation-for="@Model.NewAccount.Phone" class="text-danger"></span><br />
            <span asp-validation-for="@Model.NewAccount.Login" class="text-danger"></span><br />
            <span asp-validation-for="@Model.NewAccount.Password" class="text-danger"></span><br />
        </div>
        <div class="container registration py-5">
            <p class="text-light d-flex justify-content-center">Registration</p>
            <div class="container text-light">
                <input style="width: 49%;" asp-for="@Model.NewAccount.Name" placeholder="Name">
                <input style="width: 48%;" asp-for="@Model.NewAccount.LastName" placeholder="Last Name"><br /><br />
                <select name="Country" style="width: 100%;">
                    <option value="Turkiye">Turkiye</option>
                    <option value="England">England</option>
                    <option value="Russia">Russia</option>
                    <option value="Uzbekistan">Uzbekistan</option>
                    <option value="Kirgzistan">Kirgizistan</option>
                    <option value="Turkmenistan">Turkmenistan</option>
                    <option value="Germany">Germany</option>
                    <option value="USA">USA</option>
                </select>
                <br /><br />
                <input style="width: 100%;" type="email" asp-for="@Model.NewAccount.Email" placeholder="Your Email"><br /><br />
                <input style="width: 100%;" asp-for="@Model.NewAccount.Phone" type="tel" placeholder="Phone Number"><br /><br />
                <input style="width: 100%;" asp-for="@Model.NewAccount.Login" placeholder="Login"><br /><br />
                <input style="width: 100%;" type="password" asp-for="@Model.NewAccount.Password" placeholder="Password"><br /><br />

                <table width="100%">
                 <tr>
                     <td>
                                     <input class="mx-2" type="checkbox" name="terms" required>
                     </td>
                     <td>
                                     <label style="font-size: 13px;" for="acceptance"> I do accept the Terms and Conditions of your site.</label><br>
                     </td>
                 </tr>
                </table>
               
                <br /><br />

                <button class="btn btn-danger col-12" type="submit">Enter</button>
            </div>
        </div>
    </form>







</div>